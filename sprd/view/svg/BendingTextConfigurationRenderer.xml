<sprdSvg:BendingTextConfigurationRendererClass xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sprdSvg="sprd.view.svg">


    <path cid="path" id="textPath{maskId}" fill="none" stroke="none" _transform="translate({configuration.textPathOffsetX}, {configuration.textPathOffsetY})"
          d="{configuration.textPath}"/>

    <text cid="text" font-family="{configuration.font.getUniqueFontName()}" font-size="16" id="text" text-anchor="middle" style="fill: url(#p{maskId})" dy="{configuration.dy}">
        <textPath xlink:href="#textPath{maskId}" cid="textPath" startOffset="50%" fill="{getPrintColor()}">
            {configuration.text}
        </textPath>
    </text>

</sprdSvg:BendingTextConfigurationRendererClass>