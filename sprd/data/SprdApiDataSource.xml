<data:SprdApiDataSourceClass xmlns:data="sprd.data" xmlns:conf="js.conf">
    <conf:DataSource>
        <!-- use className if you need some logic inside your models, if not use an alias and obmit the className-->
        <conf:Resource path="languages" modelClassName="sprd.model.Language"/>
        <conf:Resource path="countries" modelClassName="sprd.model.Country" />
        <conf:Resource path="shops" modelClassName="sprd.model.Shop">
            <conf:Resource path="address" modelClassName="sprd.model.Address"/>
            <conf:Resource path="articles" modelClassName="sprd.model.Article" />
            <conf:Resource path="articleCategories" modelClassName="sprd.model.ArticleCategory"/>
            <conf:Resource path="printTypes" modelClassName="sprd.model.PrintType" />
            <conf:Resource path="designs" modelClassName="sprd.model.Design" />
            <conf:Resource path="designCategories" modelClassName="sprd.model.DesignCategory"/>
            <conf:Resource path="productTypes" modelClassName="sprd.model.ProductType" />
            <conf:Resource path="fontFamilies" modelClassName="sprd.model.FontFamily" />
            <conf:Resource path="products" modelClassName="sprd.model.Product"/>
            <conf:Resource path="productTypeDepartments" modelClassName="sprd.model.ProductTypeDepartment"/>
            <conf:Resource path="shippingTypes" modelClassName="sprd.model.ShippingType"/>
            <conf:Resource path="applications" modelClassName="sprd.model.Application"/>
        </conf:Resource>
        <conf:Resource path="currencies" modelClassName="sprd.model.Currency">

        </conf:Resource>
        <conf:Resource path="baskets" modelClassName="sprd.model.Basket">
            <conf:Resource path="items" modelClassName="sprd.model.BasketItem" processor="BasketItemProcessor"/>
        </conf:Resource>
        <conf:Resource path="users" modelClassName="sprd.model.User">

        </conf:Resource>
    </conf:DataSource>
</data:SprdApiDataSourceClass>